{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=prod-db-server;Port=5432;Database=ignite_life;Username=ignite_user;Password=SuperSecurePassword123!"
  },
  "JwtSettings": {
    "Secret": "your-very-long-32+char-secret-here",
    "Issuer": "IgniteLifeApi",
    "Audience": "IgniteLifeClient",
    "AccessTokenExpiryMinutes": 15,
    "SlidingRefreshTokenExpiryHours": 12,
    "RememberMeRefreshTokenExpiryDays": 30,

    "AccessTokenCookieName": "access_token",
    "RefreshTokenCookieName": "refresh_token",
    "CookiePath": "/",
    "CookieDomain": null
  },
  "IdentitySettings": {
    "PasswordRequiredLength": 12,
    "RequireDigit": true,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "RequireNonAlphanumeric": true,
    "LockoutAllowedForNewUsers": true,
    "LockoutMaxFailedAccessAttempts": 5,
    "LockoutDefaultLockoutMinutes": 15
  },
  "Cors": {
    "SpaOrigin": "https://app.yourdomain.com"
  }
}
