FROM mcr.microsoft.com/dotnet/sdk:9.0 AS test
WORKDIR /src

# Copy solution and csproj files for caching
COPY IgniteLifeApi.sln ./
COPY IgniteLifeApi/*.csproj IgniteLifeApi/
COPY IgniteLifeApi.Tests/*.csproj IgniteLifeApi.Tests/

# Restore dependencies
RUN dotnet restore

# Copy remaining source
COPY . .

# Build the test project
RUN dotnet build -c Release --no-restore

# Set working directory to test project
WORKDIR /src/IgniteLifeApi.Tests

# Run tests
CMD ["dotnet", "test", "-c", "Release"]
